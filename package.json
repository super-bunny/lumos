{
  "name": "lumos",
  "productName": "lumos",
  "version": "0.1.0-alpha.6",
  "description": "Control your monitors brightness",
  "main": ".webpack/main",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [
    "lumos",
    "brightness",
    "monitor",
    "control"
  ],
  "author": {
    "name": "Clovis de Villars",
    "email": "clovis.devillars@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "platform": [
          "darwin",
          "win32",
          "linux"
        ],
        "icon": "./src/renderer/assets/icons/lumos_icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "iconUrl": "https://github.com/super-bunny/lumos/raw/dev/src/renderer/assets/icons/lumos_icon.ico",
            "setupIcon": "./src/renderer/assets/icons/lumos_icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "./src/renderer/assets/icons/lumos_icon.icns",
            "format": "ULFO",
            "overwrite": true
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "icon": "./src/renderer/assets/icons/lumos_icon.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devServer": {
              "liveReload": false
            },
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/renderer.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/main/preload.ts"
                  }
                }
              ]
            }
          }
        ],
        [
          "@timfish/forge-externals-plugin",
          {
            "externals": [
              "ddc-rs"
            ],
            "includeDeps": true
          }
        ]
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "platforms": [
            "win32",
            "darwin",
            "linux"
          ],
          "config": {
            "repository": {
              "owner": "super-bunny",
              "name": "lumos"
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@timfish/forge-externals-plugin": "^0.1.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^8.0.11",
    "@types/react": "^18.0.4",
    "@types/react-dom": "^18.0.0",
    "@types/semver": "^7.3.10",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "babel-loader": "^8.2.5",
    "babel-preset-react-app": "^10.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^4.2.1",
    "electron": "18.0.3",
    "eslint": "^8.0.0",
    "eslint-config-react-app": "^7.0.1",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^2.0.0",
    "react-refresh": "^0.14.0",
    "style-loader": "^1.2.1",
    "typescript": "^4.7.4",
    "webpack-bundle-analyzer": "^4.5.0"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@koa/cors": "^3.3.0",
    "@koa/router": "^12.0.0",
    "@mui/icons-material": "^5.6.1",
    "@mui/lab": "^5.0.0-alpha.77",
    "@mui/material": "^5.6.1",
    "@reduxjs/toolkit": "^1.8.3",
    "axios": "^0.27.2",
    "ddc-rs": "^0.1.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.2",
    "file-loader": "^6.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.3",
    "material-ui-popup-state": "^4.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "6",
    "semver": "^7.3.7"
  }
}
